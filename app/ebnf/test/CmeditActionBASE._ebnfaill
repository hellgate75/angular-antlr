"cmedit" "action" ACTION_BY_FDN | ACTION_BY_QUERY

ACTION_BY_FDN ::= <fdn> { ";" <fdn> } ACTION_SPECIFICATION [OUTPUT-FORMAT]

ACTION_BY_QUERY ::=  SCOPE { ";" SCOPE } FILTER ACTION_SPECIFICATION [NAMESPACE] [VERSION] [NETYPE] [OUTPUT-FORMAT]

SCOPE ::= <fdn>
          | <node-name>
          | "*"
          | ["*"] <partial-node-name> ["*"]

FILTER ::= <mo-class-type>
           | ( <mo-class-type> "." ATTRIBUTE_FILTER )
           | ( <mo-class-type> "." "(" ATTRIBUTE_FILTER { "," ATTRIBUTE_FILTER } ")" )

ATTRIBUTE_FILTER ::=  <attribute-name> COMPARISON_OPERATOR <attribute-value>

COMPARISON_OPERATOR ::= "==" | "<" | "<=" | ">" | ">="

ACTION_SPECIFICATION ::= <action-name> "." ATTRIBUTE_LIST

ATTRIBUTE_LIST ::= ATTRIBUTE_SETTER { ";" | "," ATTRIBUTE_SETTER }

ATTRIBUTE_SETTER ::= ( <attribute-name> = <attribute-value> )
                     | ( <attribute-name> = "." "(" ATTRIBUTE_LIST ")" )

NAMESPACE ::= ( "-ns" | "--namespace" ) "=" <namespace-name>

VERSION ::= ( "-v" | "--version" ) "=" <digit> { "." <digit> }
					 
NETYPE ::= ( "-ne" | "--netype" ) "=" <netype-name>

OUTPUT-FORMAT ::= ( "-l" | "-t" )